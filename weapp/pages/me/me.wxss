.header{
  width: 100%;
  height: 200px;
  position: relative;
}
.header image{
  width: 100%;
  height: 100%;
}
.box{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 200px;
  height: 120px;
  text-align: center;
}
.box image{
  width: 80px;
  height: 80px;
  display: inline-block;
  border-radius: 50%;
}
.user{
  font-size: 16px;
  color: #fff;
}
.weui-panel__hd::after{
  border-bottom: 0;
  
}