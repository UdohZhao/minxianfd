
.body_title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  padding-left:20px; 
  color: #1AAD19;
  border-bottom: 0.5px solid #ddd;
}
.weui-input{
  text-align: right;
}
.weui_cell_box{
  height:40px;
  line-height: 40px;
  text-align: center;
}
.weui_cell_box_key{
  float: left;
  width: 19%;
  height: 100%;
  letter-spacing:5px;
}
.weui_cell_box_input{
  float: left;
  width: 27%;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
}
.weui-cell_input{
  border-bottom:0.5px solid #ddd;
}
.input{
  display: inline-block;
  width: 40px;
  border: 1px solid #ddd;
  vertical-align: middle;
}
.picStyle{
  padding-right: 40px;
}
.label{
  color: #f00;
  position: absolute;
  right: 0;
  top: 17%;
  width: 36px;
  text-align: right;
}
.weui-cell::before{
  border: 0;
}
.posR{
  position: relative;
}
.page__bd_spacing{
  margin-top: 30px;
  padding:0 20px;
}
.weui-btn-area{
  margin: 0;
  width: 100%;
  height: 36px;
  line-height:36px;
}
.weui-cell__ft{
  text-align: center;
  margin-right: 15px;
  margin-left: 5px;
  border: 0.5px solid #f00;
}
.labelStyle{
  display: inline-block;
  width: 60%;
  vertical-align: middle;
  letter-spacing:3px;
}
.labelRightStyle{
  float: right;
  width: 20px;
  height: 36px;
  line-height: 36px;
}
.weui-btn-area image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
}