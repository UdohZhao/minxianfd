
.body_title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  padding-left:20px; 
  color: #1AAD19;
  border-bottom: 0.5px solid #ddd;
}
.page_bd{
  border-bottom: 0.5px solid #ddd;
}
.weui-input{
  text-align: right;
}
.weui_cell_box{
  height:40px;
  line-height: 40px;
  text-align: center;
  padding: 10px 0;
  border-bottom: 0.5px solid #ddd;
}
.weui_cell_box_key{
  float: left;
  width: 19%;
  height: 100%;
  letter-spacing:5px;
}
.weui_cell_box_input{
  float: left;
  width: 27%;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
}
.input{
  display: inline-block;
  width: 40px;
  border: 1px solid #ddd;
  vertical-align: middle;
}

.page__bd_spacing{
  margin-top: 30px;
  padding:0 20px;
}
.weui-cell::before{
  border: 0;
}
.page__bd_spacing image{
  width: 100%;
  height: 80px;
}

