<view class="page">
  <view class="page_weui_hd">置顶推广</view>
  <view class="page_bd">
      <!-- 遍历体 -->
      <block wx:for="{{hm_promotion_cost_arr}}" wx:key="index">
        <view class="page_list {{curNav == item.id ? 'active' : ''}}" data-day="{{item.day}}"  data-cost="{{item.cost}}" bindtap="payTap" data-id="{{item.id}}">
          {{item.day}}天/{{item.cost}}元
        </view>
      </block>
    <view class="h15"></view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd textAlignLeft">{{cost}}元</view>
      <view class="weui-cell__hd">
        <view class="weui-label">实付金额</view>
      </view>
    </view>
  </view>
  <!-- 固定底部 支付链接 -->
  <view class="pay">
    <button class="weui-btn mini-btn" type="primary" bindtap='wxpay'>立即支付</button>
  </view>
</view>