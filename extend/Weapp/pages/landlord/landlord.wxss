.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.errorMsg{
  width: 100%;
  height: 300px;
  text-align: center;
  position: relative;
}
.errorBox{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 100%;
  text-align: center;
}
.errorBox image{
  display: inline-block;
  width: 50px;
  height: 50px;
}
