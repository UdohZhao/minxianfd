<view class="page">
  <!--轮播图  -->
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
      <block wx:for="{{movies}}" wx:for-index="index" wx:key="k">    
        <swiper-item>    
          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>    
        </swiper-item>    
      </block>    
    </swiper>

    <!-- 判断是否已发布房源 -->
    <view wx:if="{{gcData}}">
       <!-- 详情列表 -->
      <view class="page__bd marginTop50">
            <view class="weui-panel weui-panel_access">
                <view class="weui-panel__bd">
                    <view bindtap='gotoDetail' class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                          <image class="weui-media-box__thumb" src="../../dist/images/1.jpg" />
                      </view>
                      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                          <view class="weui-media-box__title">果园习总屯精品次卧</view>
                          <view class="weui-media-box__desc">2室1厅/86㎡/南/金科时代中心</view>
                          <view class="weui-media-box__desc">
                              <!-- 判断标签 -->
                            <text class="lebalStyleDT lebalSty">地铁</text>
                            <text class="lebalStyleSSKF lebalSty">随时看房</text>
                            <text class="lebalStyleXSFY lebalSty">新上房源</text>
                            <text class="lebalStyleJZX lebalSty">精装修</text>
                            <!-- <text class="lebalStyleYCW lebalSty">有车位</text> -->
                          </view>
                          <view class="weui-media-box__desc red">
                              2700元/月
                          </view>
                      </view>
                    </view>
                </view>
            </view>
      </view>
    </view>
    <!--否则，发布房源  -->
    <view else>
      <view class="errorMsg">
        <view class="errorBox">
          <image src='../../dist/images/rent.png'></image>
          <view>手里有好房源，快来发布吧！</view>
          <button class="weui-btn mini-btn" type="primary" size="mini" bindtap='ListingServices'>去发布房源信息</button>
        </view>
      </view>
    </view>
</view>