<view class="page">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <!-- 房东信息  开始-->
        <view class="page_bd">
          <view class="body_title">房东信息</view>
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
              <view class="weui-label">姓名</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" name="cname" placeholder="请输入姓名"/>
            </view>
          </view>
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
              <view class="weui-label">手机号码</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" name="phone"  placeholder="请输入手机号码" bindinput="getInputPhone" />
            </view>
          </view>
          <view class="weui-cell weui-cell_input weui-cell_vcode borderBom">
            <view class="weui-cell__hd">
                <view class="weui-label sms-label">验证码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" name="code" placeholder="请输入验证码" bindinput="getInputCode"/>
            </view>
            <view class="weui-cell__ft">
                <view wx:if="{{disabled == false}}" class="weui-vcode-btn sms-btn" bindtap="getVerificationCode">{{time}}</view>
                <view wx:else class="weui-vcode-btn sms-btn">{{time}}</view>
            </view>
          </view>
        </view>
        <view class="page__bd page__bd_spacing">
        <button class="weui-btn mini-btn" type="primary"   formType="submit">发布房源信息</button>
    </view>
    <view class="page__bd page__bd_spacing">
        <button class="weui-btn mini-btn" type="primary" bindtap='gotoNext'>下一页</button>
    </view>
    <view class="page__bd page__bd_spacing">
          <image src='../../dist/images/hmIcon.png'></image>
        </view>
  </form>
</view>