/**index.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.weui-grids{
  background-color: #f1f1f1;
}
.body{
  position: relative;
  width: 100%;
  min-height: 400rpx;
}
.weui-grid{
  width: 33.3333%;
  padding:20rpx 0;
  border-right: 0;
}
.weui-search-bar__label image{
  display: inline-block;
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

/* 更多  开始*/

.labelStyle{
  display: inline-block;
  width: 60%;
  vertical-align: middle;
  letter-spacing:3px;
}
.labelRightStyle{
  float: right;
  width: 20px;
  height: 36px;
  line-height: 36px;
}
.weui-btn-area image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

.weui-btn-area{
  margin: 0;
  width: 100%;
  height: 36px;
  line-height:36px;
}
/* 更多 结束 */

.posR{
  position: relative;
}
.commodity_screen{
  position:absolute;
  top:0;
  left: 0;
  background-color:rgba(225, 225, 225, .6);
  width: 100%;
  min-height: 450px;
  z-index: 2;
}
.weui-tab__panel{
  position:absolute;
  top:50px;
  left: 0;
  z-index: 3;
  background-color: #fff;
  width: 100%;
  min-height: 240px;
  padding-top: 0;
}
.weui-tab__content{
  max-height: 240px;
}
/* 弹出框样式 */
.containerBox{
  position: relative;  
  width: 100%;  
  height: 100%;  
}
/*左侧栏主盒子*/  
.nav_left{  
  /*设置行内块级元素（没使用定位）*/  
  display: inline-block;  
  width: 50%;  
  height: 100%;  
  background: #f5f5f5;  
  text-align: center;  
} 
/*左侧栏list的item*/  
.nav_left .nav_list_items{  
  height: 30px;  
  line-height: 30px;  
  padding: 6px 0;  
  border-bottom: 1px solid #dedede;  
  font-size: 14px;  
} 
/*左侧栏list的item被选中时*/  
.nav_left  .active{  
  /*背景色变成白色*/  
  background: #fff;  
}

/*右侧栏主盒子*/  
.nav_right{  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;   
  width: 50%;
  max-height:240px;     
  box-sizing: border-box;  
  background: #fff;
  overflow-y: auto;
  font-size: 16px;
  padding: 10px;  
}  

/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  float: left;  
  width: 100%;  
  height: 30px; 
  padding: 6px 0; 
  line-height: 30px; 
  text-align: center; 
  border-bottom: 0.5px solid #ddd; 
}
.list{
  line-height: 40px;
  height: 40px;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  padding-left: 10px;
}
.moreList{
  text-align: left;
  padding-left: 40px;
 
}  
.marginTop50{
  margin-top: 50px;
  }
.weui-media-box__hd_in-appmsg{
  width: 100px;
  height: 100px;
  line-height: 100px;
}
.weui-media-box__desc{
  width: 100%;
  height: 23px;
  line-height: 1.6;
  color: #333;
  font-size: 12px;
  letter-spacing: 1px;
}
.red{
  font-size: 16px;
  color: #f00;
}
.search{
  position: absolute;
  bottom:3%;
  left: 0;
  width: 100%;
  padding:5px 20px;
  box-sizing: border-box;
}
.weui-search-bar__form{
  opacity: .8;
  padding:5px 10px;
}
.weui-search-bar__form image{
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
}
.locationMsg{
  display: inline-block;
  color: #999;
  vertical-align: middle;
}

/* 三角形 */
.label{
  width:0;
  height:0;
  border-width:10px 6px;
  border-style:solid;
  border-color:#ddd transparent transparent transparent;
  position: absolute;
  top:25%;
  right: -50%;
}
.weui-bar__item_on .label{
  border-color:transparent transparent #1AAD19 transparent;
  top:-10%;
}
.weui-navbar__title{
  overflow: inherit;
  position: relative;
}
.fxBox{
  padding: 20px 10px;
  border-bottom: 0.5px solid #ddd;
}
.fxBox_bd_list{
  display: inline-block;
  width: 24%;
  margin: 5px 10px 5px 0;
  padding:5px;
  text-align: center;
  border: 0.5px solid #ddd;
  flex: 1;
  font-size: 14px;
  border-radius:3px; 
}
.listCctive{
  border: 0.5px solid #1AAD19;
  color: #1AAD19;
}
button[size="mini"]{
  width: 45%;
  line-height: 40px;
  height: 40px;
  font-size: 16px;
}
.marginRight20{
  margin-right: 20px;
}

